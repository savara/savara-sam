<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='ApplicationModule'>
  <!-- Inherit the core Web Toolkit stuff.                        -->
  <inherits name='com.google.gwt.user.User'/>

  <!-- Other module inherits                                      -->
  <inherits name="com.smartgwt.SmartGwt" />
  <inherits name="com.gwtplatform.mvp.Mvp" />
  <inherits name="com.google.gwt.inject.Inject" />

  <!-- Specify the app entry point class.                         -->
  <entry-point class='org.savara.sam.web.client.ApplicationEntryPoint'/>

  <define-configuration-property name="gin.ginjector" is-multi-valued="false" />
  <set-configuration-property name="gin.ginjector" value="org.savara.sam.web.client.ApplicationUI" />

  <inherits name="com.allen_sauer.gwt.log.gwt-log-DEBUG" />

  <set-property name="log_ConsoleLogger" value="ENABLED" />
  <set-property name="log_GWTLogger" value="ENABLED" />
  <set-property name="log_SystemLogger" value="ENABLED" />

  <!-- Loggers Disabled by default -->
  <set-property name="log_DivLogger" value="DISABLED" />
  <set-property name="log_FirebugLogger" value="DISABLED" />
  <set-property name="log_WindowLogger" value="DISABLED" />

  <inherits name="com.google.gwt.json.JSON" />

  <inherits name="com.google.gwt.http.HTTP" />

  <set-configuration-property name="log_pattern" value="%d [%-5p] %m%n" />

  <!-- Specify the paths for translatable code  -->
  <source path='client'/>
  <source path="shared" />
</module>
